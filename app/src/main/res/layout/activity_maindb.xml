<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".db_room.MainDBActivity">
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:text="+"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/eT"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/eT"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:textColor="@color/teal_700"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintRight_toLeftOf="@+id/btnDel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnAdd"/>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:text="-"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/eT" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/eT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>